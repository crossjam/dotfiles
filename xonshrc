def conch_symbol(sample=False):
    return [ u" xonsh \U0001F41A", "WHITE", "#555" ]

# Maybe use direnv instead

@events.autovox_policy
def dotvenv_policy(path, **_):
    venv = path / '.venv'
    if venv.exists():
        return venv
	
